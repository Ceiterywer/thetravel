@using DuLichVietNam.Models;
@{
    ViewBag.Title = "ComfirmPaymentClient";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<main id="content" class="site-main">
    <!-- Inner Banner html start-->
    <section class="inner-banner-wrap">
        <div class="inner-baner-container" style="background-image: url('/Content/images/footer-bg.jpg'); background-size:initial">
            <div class="container">
                <div class="inner-banner-content">
                    <h1 class="inner-title">XÁC NHẬN</h1>
                </div>
            </div>
        </div>
        <div class="inner-shape" style="background-image:url('/Content/images/slider-pattern.png');"></div>
    </section>
    <!-- Inner Banner html end-->
    <div class="step-section cart-section">
        <div class="container">
            <div class="step-link-wrap">
                <div class="step-item active">
                    Your cart
                    <a href="#" class="step-icon"></a>
                </div>
                <div class="step-item active">
                    Your Details
                    <a href="#" class="step-icon"></a>
                </div>
                <div class="step-item active">
                    Finish
                    <a href="#" class="step-icon"></a>
                </div>
            </div>
            <!-- step three form html start -->
            <div class="confirmation-outer">
                <div class="success-notify">
                    <div class="success-icon">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="success-content">
                        <h3>BẠN ĐÃ ĐẶT HÀNG THÀNH CÔNG</h3>
                        <p>Cám ơn bạn sử dụng dịch vụ của chúng tôi!</p>
                    </div>
                </div>
                <div class="confirmation-inner">
                    <div class="row">
                    </div>
                </div>
            </div>
            <!-- step three form html end -->
        </div>
    </div>
    <a class="button-primary" href="@Url.Action("Index", "WebDuLich")">TRANG CHỦ</a>
</main>