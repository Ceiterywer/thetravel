
@{
    ViewBag.Title = "ChiTietTour";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<main id="content" class="site-main">
    <!-- Inner Banner html start-->
    <section class="inner-banner-wrap">
        <div class="inner-baner-container" style="background-image: url('/Content/images/footer-bg.jpg'); background-size:initial">
            <div class="container">
                <div class="inner-banner-content">
                    <h1 class="inner-title">CHI TIẾT TOUR</h1>
                </div>
            </div>
        </div>
        <div class="inner-shape" style="background-image:url('/Content/images/slider-pattern.png');"></div>
    </section>
    <!-- Inner Banner html end-->
    <div class="single-tour-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="single-tour-inner">
                        <h2>@Model.TenTour </h2>
                        <figure class="feature-image">
                            <img src="~/Content/images/@Model.Anhbia" style="background-size:cover" alt="">
                        </figure>
                        <div class="tab-container">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="overview-tab" data-toggle="tab" href="#overview" role="tab" aria-controls="overview" aria-selected="true">THÔNG TIN</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="program-tab" data-toggle="tab" href="#program" role="tab" aria-controls="program" aria-selected="false">LỘ TRÌNH</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" id="map-tab" data-toggle="tab" href="#map" role="tab" aria-controls="map" aria-selected="false">MAP</a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <!--Thông tin-->
                                <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview-tab">
                                    <div class="overview-content"></div>
                                    <p>@Model.Mota</p>
                                </div>
                                <!--Lộ trình-->
                                <div class="tab-pane" id="program" role="tabpanel" aria-labelledby="program-tab">
                                    <div class="itinerary-content">
                                        
                                        <h3> @Model.TenTour <span>(@Model.ThoiGian)</span></h3>
                                        <p>@Model.LoTrinh</p>
                                    </div>
                                    
                                </div>
                                <!--Map-->
                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="package-price">
                            <h5 class="price">
                                <span>@Model.GiaTour</span> VND
                            </h5>
                        </div>
                        <div class="widget-bg booking-form-wrap" style="text-align:center">
                            <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMaTour = @Model.MaTour, @strURL = Request.Url.ToString()})"><b>ĐẶT TOUR</b></a>
                        </div>
                        <div class="widget-bg information-content text-center">
                            <h5>TRAVEL TIPS</h5>
                            <h3>NEED TRAVEL RELATED TIPS & INFORMATION</h3>
                            <p>Mollit voluptatem perspiciatis convallis elementum corporis quo veritatis aliquid blandit, blandit torquent, odit placeat. </p>
                            <a href="#" class="button-primary">GET A QUOTE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


