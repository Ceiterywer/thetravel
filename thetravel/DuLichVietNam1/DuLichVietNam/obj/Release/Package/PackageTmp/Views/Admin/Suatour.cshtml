@model DuLichVietNam.Models.TOUR

@{
    ViewBag.Title = "Suatour";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="home">
    <section class="inner-banner-wrap">
        <div class="inner-baner-container" style="background-image: url('/Content/images/footer-bg.jpg'); background-size:initial">
            <div class="container">
                <div class="inner-banner-content">
                    <h1 class="inner-title">QUẢN LÝ TOUR</h1>
                </div>
            </div>
        </div>
        <div class="inner-shape" style="background-image:url('/Content/images/slider-pattern.png');"></div>
    </section>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTour)

            <div class="form-group">
                @Html.LabelFor(model => model.MaTour, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div style="font:18px; padding: 5px 0 0 5px"> @Model.MaTour </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TenTour, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div style="font:18px; padding: 5px 0 0 5px"> @Model.TenTour </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiaTour, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiaTour, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaTour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mota, new { @class = "control-label col-md-2" })
                <div class="col-md-10">

                    <textarea name="Mota">@Model.Mota</textarea>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Anhbia, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    Chọn ảnh mới
                    <input type="file" name="fileUpload" />
                    <img src="@Url.Content("~/Content/images/"+ Model.Anhbia)" width="120px" /> (Ảnh hiện tại)
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayCapNhat, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayCapNhat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaPT, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaPT")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaKS, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaKS")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaDD, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaDD")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }


    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</body>