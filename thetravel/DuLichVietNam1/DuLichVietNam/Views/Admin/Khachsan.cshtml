@model PagedList.PagedList<DuLichVietNam.Models.KHACHSAN>
@using PagedList.Mvc;
@using DuLichVietNam.Models
@{
    ViewBag.Title = "Khachsan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="home">
    <!-- Tittle html -->
    <section class="inner-banner-wrap">
        <div class="inner-baner-container" style="background-image: url('/Content/images/footer-bg.jpg'); background-size:initial">
            <div class="container">
                <div class="inner-banner-content">
                    <h1 class="inner-title">QUẢN LÝ KHÁCH SẠN</h1>
                </div>
            </div>
        </div>
        <div class="inner-shape" style="background-image:url('/Content/images/slider-pattern.png');"></div>
    </section>
    <section class="package-section">
        <div class="cart-section">
            <div class="container">
                <div class="cart-list-inner">
                    <form action="#">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr style="text-align:center;">
                                        <td> Tên Khách Sạn</td>
                                        <td> Tổng Quan Khách Sạn</td>
                                        <td> Đặc Điểm </td>
                                        <td> Ảnh bìa </td>
                                        <td>EDIT</td>
                                        <td></td>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody style="text-align:center;">
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenKS)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TongQuan)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DacDiem)
                                            </td>
                                            <td class="anh-bia">
                                                <img src="@Url.Content("~/Content/images/" + item.AnhKS)" />
                                            </td>
                                            <td>
                                                @Html.ActionLink("Sửa", "SuaKS", new { id = item.MaKS })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Xóa", "XoaKS", new { id = item.MaKS })
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                            <div class="btn-wrap text-center">
                                <a class="button-primary" href="@Url.Action("ThemmoiKS", "Admin" )">Thêm khách sạn</a>
                            </div>
                        </div>
                    </form>
                    <br />
                    <br />
                    <div class="MenuTrang" style="margin:auto">
                        @Html.PagedListPager(Model, page => Url.Action("Khachsan", new { page = page }))
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

