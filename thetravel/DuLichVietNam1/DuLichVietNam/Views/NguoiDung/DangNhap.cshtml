
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- favicon -->
    <link rel="icon" type="image/png" href="~/Content/images/vn-travel-icon.png">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <!-- Fonts Awesome CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/user_login_form/user-login-css/style.css">
    <title>Du lịch Việt Nam</title>
</head>
<body class="img js-fullheight" style="background-image: url('/Content/user_login_form/user-login-images/bg.jpg'); background-position: center; background-repeat: no-repeat; background-size: cover;">
    <section class="ftco-section">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center mb-5">
                        <a href="@Url.Action("Index", "WebDuLich")">
                            <img class="white-logo" src="~/Content/images/vn-travel-logo-1.png" alt="logo">
                        </a>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form action="#" class="signin-form">
                                <div class="form-group">
                                    <input id="" type="text" class="form-control" placeholder="Username" @Html.TextBox("TenDN")
                                    <p style="color:red">@ViewData["Loi1"]</p>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control" placeholder="Password" @Html.Password("Matkhau")
                                    <span toggle="#password-field"></span>
                                    <p style="color:red">@ViewData["Loi2"]</p>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3" href="@Url.Action("Index", "WebDuLich")">Đăng nhập</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50">
                                        <label class="checkbox-wrap checkbox-primary">
                                            Remember Me
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="@Url.Action("DangKy", "NguoiDung")" style="color: #fff">Đăng ký</a>
                                    </div>
                                </div>
                            </form>
                            <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>


    <!-- *Scripts* -->
    <script src="~/Content/user_login_form/user-login-js/jquery.min.js"></script>
    <script src="~/Content/user_login_form/user-login-js/popper.js"></script>
    <script src="~/Content/user_login_form/user-login-js/bootstrap.min.js"></script>
    <script src="~/Content/user_login_form/user-login-js/main.js"></script>
</body>
</html>
